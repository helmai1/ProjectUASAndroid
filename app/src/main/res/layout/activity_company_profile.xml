<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projectuas.CompanyProfile" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/judul"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisata Kota Malang"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malang merupakan salah satu kota yang sering menjadi destinasi wisata pilihan bagi masyarakat indonesia, karena di daerah malang sendiri terdapat banyak pilihan wisata yang cocok bagi anak muda, keluarga ataupun rekreasi.
Malang juga memiliki berbagai jenis wisata. Mulai wisata alam, wisata kuliner, bahkan wisata belanja" />


            <TextView
                android:id="@+id/visi1"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visi"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/visi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="230dp"
                android:text="Menciptakan sebuah wujud Kota Wisata Malang yang bersih,aman,nyaman, tentram dinamis serta seni dan berbudaya religius yang berkualitas untuk menjadikan Kota Wisata Edukasi masyarakat tradisional."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/misi"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Misi"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/misi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="340dp"
                android:text="1. Meningkatkan Kesejateraan masyarakat  dengan motivasi dan komitmen bersama membangun pola pikir yang rasional."
                android:textSize="14sp" />
            <TextView
                android:id="@+id/misi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="395dp"
                android:text="2. Melestarikan dan mengembangkan Seni  dan budaya Tradisi Masyarakat
Tradisonal."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/misi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="445dp"
                android:text="3.Meningkatkan Sumber daya manusia (SDM) dan Sumber Daya Alam (SDA)yang berkualitas dan berkembang."
                android:textSize="14sp" />
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="500dp"
                class="com.google.android.gms.maps.SupportMapFragment" />





        </RelativeLayout>
    </ScrollView>
</RelativeLayout>