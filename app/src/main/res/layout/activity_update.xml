<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.projectuas.UpdateActivity">

    <Button
        android:id="@+id/button_choose_image_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Picture" />

    <EditText
        android:id="@+id/edit_text_file_name_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/button_choose_image_update"
        android:hint="Judul" />

    <EditText
        android:id="@+id/deskripsi_update"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_file_name_update"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="0dp"
        android:hint="Deskripsi" />


    <ImageView
        android:id="@+id/image_view_update"
        android:layout_width="391dp"
        android:layout_height="303dp"
        android:layout_above="@id/progress_bar"
        android:layout_below="@+id/deskripsi_update"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="40dp" />

    <ProgressBar
        android:id="@+id/progress_bar_update"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload_update"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_upload_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Update" />

    <TextView
        android:id="@+id/text_view_show_uploads_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_upload_update"
        android:layout_alignBottom="@+id/button_upload_update"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/button_upload_update"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="16sp" />

</RelativeLayout>